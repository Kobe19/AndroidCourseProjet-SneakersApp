<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfosActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mylay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="415dp"
            android:layout_height="164dp"
            app:srcCompat="@drawable/front"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="-8dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="204dp"
            android:layout_height="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.574"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/link"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="-8dp" />

        <TextView
            android:layout_width="179dp"
            android:layout_height="22dp"
            android:background="@drawable/edit_form"
            android:text="  SneakersApp Version 1.0"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.848"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android Project"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:textSize="50dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="267dp"
        android:layout_height="368dp"
        app:srcCompat="@drawable/andro"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/btn1"
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:text="Made by :"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btn2"
            android:layout_width="275dp"
            android:layout_height="31dp"
            android:text="Daniel Guirol FOGUE TSAKOU"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>