<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="386dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your names here"
            android:textStyle="italic"
            android:id="@+id/txt1"/>


        <EditText
            android:layout_width="386dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your username here"
            android:textStyle="italic"
            android:id="@+id/txt2"/>


        <EditText
            android:layout_width="386dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your email address here"
            android:textStyle="italic"
            android:id="@+id/txt3"/>


        <EditText
            android:layout_width="386dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your address here"
            android:textStyle="italic"
            android:id="@+id/txt4"/>

        <EditText
            android:layout_width="386dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your phone number here"
            android:textStyle="italic"
            android:id="@+id/txt5"/>

        <EditText
            android:layout_width="386dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your password here"
            android:textStyle="italic"
            android:id="@+id/txt6"/>

        <Button
            android:background="@drawable/edit_form"
            android:id="@+id/reg"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"/>
    </LinearLayout>

</ScrollView>