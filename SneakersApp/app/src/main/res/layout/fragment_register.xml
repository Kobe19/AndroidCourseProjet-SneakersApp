<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/frag1">

        <EditText
            android:id="@+id/txt1"
            android:layout_width="377dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your names here"
            android:textColorHint="#FF6200EE"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/txt2"
            android:layout_width="378dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your username here"
            android:textColorHint="#FF6200EE"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/txt3"
            android:layout_width="376dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your email address here"
            android:textColorHint="#FF6200EE"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/txt4"
            android:layout_width="376dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your address here"
            android:textColorHint="#FF6200EE"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/txt5"
            android:layout_width="376dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your phone number here"
            android:textColorHint="#FF6200EE"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/txt6"
            android:layout_width="374dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_form"
            android:hint=" enter your password here"
            android:textColorHint="#FF6200EE"
            android:textStyle="italic" />

        <Button
            android:background="@drawable/edit_form"
            android:id="@+id/reg"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="90dp"/>
    </LinearLayout>

</ScrollView>